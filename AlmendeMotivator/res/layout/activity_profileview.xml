<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#D8D8D8" >
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Edit your profile +"
            android:id="@+id/btnEdit"
            style="@style/button"
            android:onClick="editUserBtn"
           />
    <TextView
            android:id="@+id/lblName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            style="@style/header"
            android:layout_below="@+id/btnEdit"
/>
    <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            style="@style/normalText"
            android:layout_below="@+id/lblName"
            />
    <TextView
            android:id="@+id/age"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Age"
            style="@style/header"
            android:layout_below="@+id/name"/>
    <TextView
            android:id="@+id/ageContent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/normalText"
            android:text="age..."
            android:layout_below="@+id/age"/>
    <TextView
            android:id="@+id/goal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Goal"
            style="@style/header"
            android:layout_below="@+id/ageContent"/>
    <TextView
            android:id="@+id/goalContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/normalText"
            android:text="goal.."
            android:layout_below="@+id/goal"/>
    <TextView
            android:id="@+id/city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="City"
            style="@style/header"
            android:layout_below="@+id/goalContent"/>
    <TextView
            android:id="@+id/cityContent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/normalText"
            android:text="city.."
            android:layout_below="@+id/city"/>
    <TextView
            android:id="@+id/level"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Level"
            style="@style/header"
            android:layout_below="@+id/cityContent" />
    <ProgressBar
            android:id="@+id/progressXP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="80"
            android:layout_below="@+id/level"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    <TextView
            android:id="@+id/progressText"
            android:layout_width="fill_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="Experience points"
            android:layout_below="@+id/progressXP"
            android:layout_alignParentLeft="true"
            style="@style/normalText"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
    <TextView
            android:id="@+id/sports"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="My Sports:"
            style="@style/header"
            android:layout_below="@+id/progressText"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:id="@+id/sportsContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum.."
             android:layout_below="@+id/sports"
            style="@style/normalText"/>
    <TextView
            android:id="@+id/about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="About:"
            android:layout_below="@+id/sportsContent"
            style="@style/header"

            />
    <TextView
            android:id="@+id/aboutContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum.."
            android:layout_below="@+id/about"
            style="@style/normalText"/>
</RelativeLayout>

    </ScrollView>
    <ListView android:id="@+id/left_drawer"
              android:layout_width="240dp"
              android:layout_height="match_parent"
              android:layout_gravity="start"
              android:choiceMode="singleChoice"
              android:divider="@android:color/transparent"
              android:dividerHeight="0dp"
              android:background="#111"/>

</android.support.v4.widget.DrawerLayout>