<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#AA1111"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:id="@+id/mainMenu">
    <Button
            android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Your Profile"
            android:id="@+id/profileBut"  android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="10dp"
            android:onClick="switchMessages" android:layout_marginBottom="10dp" android:textSize="26dp"
            android:background="#000000"
            android:textColor="#FFFFFF" android:layout_weight="0.05"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Messages"
            android:id="@+id/messagesBut" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="10dp"
            android:onClick="switchMessages" android:layout_marginBottom="10dp" android:layout_weight="0.05" android:textSize="26dp"
            android:background="#000000"
            android:textColor="#FFFFFF"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Challenges"
            android:id="@+id/challengesBut" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="10dp"
            android:onClick="switchMessages" android:layout_marginBottom="10dp" android:layout_weight="0.05" android:textSize="26dp"
            android:background="#000000"
            android:textColor="#FFFFFF"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="My Friends"
            android:id="@+id/friendsBut" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="10dp"
            android:onClick="switchMessages" android:layout_marginBottom="10dp" android:layout_weight="0.05" android:textSize="26dp"
            android:background="#000000"
            android:textColor="#FFFFFF"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="test"
            android:id="@+id/testBut" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="10dp"
            android:onClick="switchMessages" android:layout_marginBottom="10dp" android:layout_weight="0.05" android:textSize="26dp"
            android:background="#000000"
            android:textColor="#FFFFFF"/>
</LinearLayout>

