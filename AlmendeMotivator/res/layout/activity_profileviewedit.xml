<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/darkerWhite" >
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Save changes +"
                android:id="@+id/btnSave"
                android:onClick="saveUserBtn"
                style="@style/button"
                android:layout_below="@+id/aboutInput"/>
        <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                style="@style/header"/>
        <EditText
                android:id="@+id/nameInput"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                style="@style/normalText"
                android:layout_below="@id/name"/>
        <TextView
                android:id="@+id/age"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                style="@style/header"
                android:layout_below="@+id/nameInput"/>
        <EditText
                android:id="@+id/ageInput"
                android:layout_width="fill_parent"
                style="@style/normalText"
                android:layout_height="50dp"
                android:layout_below="@id/age"/>
        <TextView
                android:id="@+id/goal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Goal"
                style="@style/header"
                android:layout_below="@+id/ageInput"/>
       <EditText
                android:id="@+id/goalInput"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                style="@style/normalText"
                android:layout_below="@id/goal"/>
        <TextView
                android:id="@+id/city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_below="@+id/goalInput"
                style="@style/header"/>
        <EditText
                android:id="@+id/cityInput"
                android:layout_width="fill_parent"
                style="@style/normalText"
                android:layout_height="50dp"
                android:layout_below="@id/city"/>
       <TextView
                android:id="@+id/sports"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="My Sports"
                style="@style/header"
                android:layout_below="@+id/cityInput"/>
        <EditText
                android:id="@+id/sportsInput"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                style="@style/normalText"
                android:layout_below="@id/sports"/>
        <TextView
                android:id="@+id/about"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="About"
                style="@style/header"
                android:layout_below="@+id/sportsInput"/>
        <EditText
                android:id="@+id/aboutInput"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                style="@style/normalText"
                android:layout_below="@id/about"
                android:gravity="top"/>


    </RelativeLayout>
    </ScrollView>
    <ListView android:id="@+id/left_drawer"
              android:layout_width="240dp"
              android:layout_height="match_parent"
              android:layout_gravity="start"
            style="@style/menu"/>

</android.support.v4.widget.DrawerLayout>